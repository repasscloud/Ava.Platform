<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

             x:Class="AvaTerminal.Maui.MainPage"
             BackgroundColor="#1E1E1E"
             Title="AvaTerminal">
             <!-- xmlns:behaviors="clr-namespace:AvaTerminal.Maui.Behaviors" -->
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">

            <!-- App Title -->
            <Label Text="AvaAI Terminal Admin Console"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center" />

            <!-- Code Entry Section -->
            <Frame BackgroundColor="#2D2D30" CornerRadius="8" Padding="16" HasShadow="False">
                <VerticalStackLayout Spacing="12">

                    <Label Text="Enter Command Code:"
                           TextColor="White"
                           FontSize="18" />

                    <HorizontalStackLayout>
                        <Entry x:Name="CodeEntry"
       Placeholder="e.g. FLT"
       TextColor="White"
       FontSize="16"
       FontFamily="Courier New"
       BackgroundColor="#1E1E1E"
       WidthRequest="120"
       ReturnType="Done"
       Completed="CodeEntry_Completed" />




                        <Button Text="Go"
                                Margin="12,0,0,0"
                                BackgroundColor="#007ACC"
                                TextColor="White"
                                Clicked="OnGoClicked" />
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>

            <!-- Menu Table Header -->
            <Label Text="Available Commands"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="White" />

            <Frame BackgroundColor="#2D2D30" CornerRadius="8" Padding="16" HasShadow="False">
                <CollectionView x:Name="CommandList"
                                ItemsSource="{Binding CommandTable}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding}"
                                   FontSize="18"
                                   FontFamily="Courier New"
                                   TextColor="#DCDCDC" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
