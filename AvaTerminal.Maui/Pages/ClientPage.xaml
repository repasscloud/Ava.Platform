<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AvaAITerminal.Pages.ClientPage"
             Title="Client Management"
             BackgroundColor="#1E1E1E">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="20">

            <!-- Code Entry Section -->
            <Frame BackgroundColor="#2D2D30" CornerRadius="8" Padding="16" HasShadow="False">
                <VerticalStackLayout Spacing="12">

                    <Label Text="Enter Command Code:"
                           TextColor="White"
                           FontSize="18" />

                    <HorizontalStackLayout>
                        <Entry x:Name="CodeEntry"
                               Placeholder="e.g. CLT"
                               TextColor="White"
                               FontSize="16"
                               FontFamily="Courier New"
                               BackgroundColor="#1E1E1E"
                               WidthRequest="120"
                               ReturnType="Done"
                               Completed="CodeEntry_Completed" />

                        <Button Text="Go"
                                Margin="12,0,0,0"
                                BackgroundColor="#007ACC"
                                TextColor="White"
                                Clicked="OnGoClicked" />
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>

            <!-- Content Placeholder -->
            <Label Text="Client Management Placeholder"
                   FontSize="20"
                   TextColor="White"
                   HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
