<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AvaAITerminal.Modals.ClientSearchModal"
             Title="Search Client"
             BackgroundColor="#1E1E1E"
             Padding="24">

    <VerticalStackLayout Spacing="20">

        <Label Text="Search for a Client"
               TextColor="White"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- ID Entry -->
        <Frame BackgroundColor="#2D2D30" CornerRadius="8" Padding="10" HasShadow="False">
            <Entry x:Name="IdEntry"
                   Placeholder="Client ID (numeric)"
                   PlaceholderColor="#888"
                   TextColor="White"
                   Keyboard="Numeric"
                   BackgroundColor="Transparent"
                   FontSize="16" />
        </Frame>

        <!-- Client ID Entry -->
        <Frame BackgroundColor="#2D2D30" CornerRadius="8" Padding="10" HasShadow="False">
            <Entry x:Name="ClientIdEntry"
                   Placeholder="Client Identifier"
                   PlaceholderColor="#888"
                   TextColor="White"
                   BackgroundColor="Transparent"
                   FontSize="16" />
        </Frame>

        <!-- Company Name Entry -->
        <Frame BackgroundColor="#2D2D30" CornerRadius="8" Padding="10" HasShadow="False">
            <Entry x:Name="CompanyNameEntry"
                   Placeholder="Company Name"
                   PlaceholderColor="#888"
                   TextColor="White"
                   BackgroundColor="Transparent"
                   FontSize="16" />
        </Frame>

        <!-- Buttons -->
        <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
            <Button Text="Search"
                    Clicked="OnSearchClicked"
                    BackgroundColor="#007ACC"
                    TextColor="White"
                    CornerRadius="6"
                    Padding="12,6" />

            <Button Text="Close"
                    Clicked="OnCloseClicked"
                    BackgroundColor="#555"
                    TextColor="White"
                    CornerRadius="6"
                    Padding="12,6" />
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>
